{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vitest/globals", "jsdom"]
  },
  "include": ["src", "vite.config.ts", "tests", "vitest.config.ts", "vitest.config.mts", "vitest.config.tsx", "vitest.config.js"]
}
